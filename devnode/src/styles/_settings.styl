// font faces
$body-font = -apple-system, BlinkMacSystemFont, "WenQuanYi Micro Hei", "Microsoft Yahei", Segoe UI, Roboto, Helvetica, Arial, sans-serif
$logo-font = $body-font
$code-font = monospace, courier

// font sizes
$body-font-size = 15px
$code-font-size = 0.8em

// colors
$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$green  = #42b983
$border = #dddddd
$codebg = #f8f8f8
$red = #ff6666

$header-padding-horizontal = 16px
$logo-width = 134px
$search-content-left = $header-padding-horizontal + $logo-width

$radius = 2px
$content-padding-top = 30px
$header-inner-height = 41px
$heading-padding-vertical = 16px
$header-height = $header-inner-height + $heading-padding-vertical * 2
$mobile-header-height = 40px
$heading-link-padding-top = $header-height + $content-padding-top
$mobile-heading-link-padding-top = $mobile-header-height + $content-padding-top
$h2-margin-top = 40px
$h3-margin-top = 32px
